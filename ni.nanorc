# Ni syntax
syntax "ni" "\.nic$"
magic "Ni script"
comment "/"
color brightred "(^|[[:blank:]])/.*$"
color brightcyan "[+-]+"
color brightcyan "[!@.><?=]+"
color brightblue "[\[]+"
color brightblue "[]]+"
color brightgreen "[{}]+"
color brightmagenta "[()]+"
color ,green "[[:space:]]+$"
color brightyellow "[#]+"
color brightyellow "#[0-9A-Fa-f]+"
color brightyellow "[$]+"
color brightyellow "\$[0-9A-Fa-f]+"